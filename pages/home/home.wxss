.header-swiper {
  width: 100%;
  height: 350rpx;
}
.header-swiper image {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.category_list {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  border-top: 1rpx solid #efefef;
  border-left: 1rpx solid #efefef;
}
.category_list .category_item {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  overflow: hidden;
  border-right: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
}
.category_item image {
  width: 60rpx;
  height: 60rpx;
}
.category_item text {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.plate_box {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding: 40rpx 40rpx;
}
.plate_box image {
  width: 45%;
}